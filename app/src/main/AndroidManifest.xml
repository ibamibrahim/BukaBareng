          package="com.bukantkpd.bukabareng">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".custom_ui.CustomFontApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.SearchResultsActivity"/>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.PreLoginActivity"/>
        <activity android:name=".activities.ProductViewActivity"/>
        <activity android:name=".activities.PaymentActivity">
        </activity>
    </application>

</manifest>