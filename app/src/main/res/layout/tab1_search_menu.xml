<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bukantkpd.bukabareng.MainActivity">

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70px"
        android:id="@+id/logo"
        android:layout_marginTop="275px"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="cari barang grosiran..."
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/edit_text_shape"
        android:padding="20px"
        android:id="@+id/search_query_view"
        android:layout_below="@id/logo"/>
    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/search_query_view"
        rv_centered="true"
        android:layout_centerHorizontal="true">
    <Button
        android:layout_width="500px"
        android:layout_height="90px"
        android:background="#bc2961"
        android:text="Cari"
        android:textColor="@color/white"
        android:layout_marginTop="50px"/>
    </com.andexert.library.RippleView>

</RelativeLayout>
